<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@drawable/round_corner" android:paddingBottom="20sp" android:paddingTop="10sp" android:minWidth="300sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_vertical|center_horizontal" android:paddingLeft="25sp" android:paddingRight="25sp">
    <TextView android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:text="New Game" android:textColor="#58410f" android:textStyle="bold" android:gravity="top|right" android:layout_width="fill_parent" android:textSize="40sp"></TextView>
    <TextView android:id="@+id/textView2" android:textColor="#000000" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/name" android:textSize="20sp" android:layout_marginTop="5sp"></TextView>
    <EditText android:id="@+id/editText1" android:layout_width="fill_parent" android:textSize="20sp" android:layout_height="40sp" android:background="@drawable/rounded_textview">
        <requestFocus></requestFocus>
    </EditText>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_marginTop="15sp">
        <Button android:id="@+id/ok2" android:layout_width="fill_parent" android:layout_weight="0.5" android:layout_marginRight="5sp" android:background="@drawable/rounded_button" android:text="@string/ok" android:textSize="20sp" android:layout_height="fill_parent" android:padding="5sp" android:minHeight="30sp"></Button>
        <Button android:id="@+id/cancel2" android:layout_weight="0.5" android:layout_width="fill_parent" android:layout_marginLeft="5sp" android:background="@drawable/rounded_button" android:text="@string/cancel" android:textSize="20sp" android:layout_height="fill_parent" android:minHeight="30sp"></Button>
    </LinearLayout>
    
</LinearLayout>
